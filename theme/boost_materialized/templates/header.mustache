{{!
    Page header.
}}

{{>theme_boost_materialized/navbar}}

<div class="header-main">
    <div class="header-main-content">
        <div class="container">

            <div class="navbar">
                <div class="navbar-inner">
                <div id="logo">
                    <a href="{{{ config.wwwroot }}}/?redirect=0" class="navbar-brand {{# logourl }}has-logo{{/ logourl }}
                {{^ logourl }}
                    hidden-sm-down
                {{/ logourl }}
                    ">
                {{# logourl }}
                    <span class="logo">
                        <img src="{{logourl}}" alt="{{sitename}}">
                    </span>
                {{/ logourl }}
                {{^ logourl }}
                    <span class="site-name hidden-sm-down">{{{ sitename }}}</span>
                {{/ logourl }}
                    </a>
                </div>

                <button class="{{{customclass}}}" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>

                <div class="collapse navbar-toggleable-md" id="navbarResponsive">

                <div class="infoarea ">

                    <!-- custom_menu -->
                    {{{ output.custom_menu }}}
                    <!-- page_heading_menu -->

                </div>
                </div>
                </div>
            </div>

            <div class="clearfix"></div>
       </div>
    </div>
    {{{ output.standard_after_main_region_html }}}
</div>
